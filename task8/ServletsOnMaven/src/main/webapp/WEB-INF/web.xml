<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/META-INF/context.xml</param-value>
    </context-param>


    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>OldServletsFromTask5.StatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetServlet</servlet-name>
        <servlet-class>OldServletsFromTask5.GetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetServlet</servlet-name>
        <url-pattern>/get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StaticPageServlet</servlet-name>
        <servlet-class>OldServletsFromTask5.StaticPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaticPageServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>OldServletsFromTask5.CheckServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Test1Servlet</servlet-name>
        <servlet-class>OldServletsFromTask5.Test1Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test1Servlet</servlet-name>
        <url-pattern>/test1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Test2Servlet</servlet-name>
        <servlet-class>OldServletsFromTask5.Test2Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Test2Servlet</servlet-name>
        <url-pattern>/test2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TweetsServlet</servlet-name>
        <servlet-class>ServletsOnPosts.TweetsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TweetsServlet</servlet-name>
        <url-pattern>/tweets</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OutputPostsServlet</servlet-name>
        <servlet-class>ServletsOnPosts.OutputPostsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OutputPostsServlet</servlet-name>
        <url-pattern>/tweets/search</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterInfo</filter-name>
        <filter-class>OldServletsFromTask5.FilterInfo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterInfo</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ServletsOnUsers</servlet-name>
        <servlet-class>ServletsOnPosts.ServletsOnUsers</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletsOnUsers</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TakeLikeServlet</servlet-name>
        <servlet-class>ServletsOnPosts.TakeLikeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TakeLikeServlet</servlet-name>
        <url-pattern>/like</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetSizeServlet</servlet-name>
        <servlet-class>ServletsOnPosts.GetSizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetSizeServlet</servlet-name>
        <url-pattern>/size</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditPostServlet</servlet-name>
        <servlet-class>ServletsOnPosts.EditPostServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditPostServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

</web-app>
